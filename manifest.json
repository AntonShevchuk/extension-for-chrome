{
	"name"				: "Bluz",
	"version"			: "1.0",
	"description"		: "Bluz plugin",
	"manifest_version"	: 2,
//    "app": {
//        "urls": [
//            ""
//        ],
//        "launch": {
//            ""
//        }
//    },
	"icons"				: {
        "128": "images/bluz-128.png",
        "64": "images/bluz-64.png",
        "48": "images/bluz-48.png",
        "16": "images/bluz-16.png"
    },
    "browser_action"	: {
        "default_icon"	: "images/bluz-16.png",
        "default_popup": "html/popup.html"
    },
    "options_page": "html/options.html",
	"background"		: {
		"page"			: "html/background.html"
	},
	"content_scripts"	: [{
		"matches"			: [ "http://*/*","https://*/*" ],
        "css"				: [ "css/inject.css" ],
		"js"				: [  "js/inject.js" ],
		"run_at" 			: "document_start"
	}],
	"web_accessible_resources" : [
		"html/iframe/*"
	],
	"permissions"		: [
        //"background",
        "cookies",
        "tabs",
		"webRequest",
        "storage",
	    "http://*/*",
    	"https://*/*"
	]
}
